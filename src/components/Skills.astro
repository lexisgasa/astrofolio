---
import { useTranslations } from "../I18N/utils";
import { ui } from "../I18N/ui";
import { skillsData } from "../I18N/ui.skills";

interface Props {
  lang: keyof typeof ui;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const skills = skillsData[lang] || skillsData.es;
---

<section id="skills" class="section-py bg-slate-50 dark:bg-slate-900/50">
  <div class="wrapper">
    <h2 class="section-title">{t("skills.title")}</h2>

    <div class="space-y-12">
      {
        skills.map((group) => (
          <div>
            <h3 class="text-xl font-semibold text-center mb-6 text-slate-700 dark:text-slate-300">
              {group.category}
            </h3>
            <div class="flex flex-wrap justify-center gap-4">
              {group.items.map((item) => (
                <span class="tag hover:scale-105 transition-transform cursor-default select-none">
                  {item}
                </span>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

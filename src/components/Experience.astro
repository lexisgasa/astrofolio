---
import { useTranslations } from "../I18N/utils";
import { ui } from "../I18N/ui";
import { jobsData } from "../I18N/ui.jobs";

interface Props {
  lang: keyof typeof ui;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const jobs = jobsData[lang] || jobsData.es;
---

<section id="experiencia" class="section-py">
  <div class="wrapper">
    <h2 class="section-title">{t("experience.title")}</h2>

    <div class="max-w-3xl mx-auto">
      {
        jobs.map((job) => (
          <div class="relative pl-8 pb-12 last:pb-0 border-l-2 border-slate-200 dark:border-slate-700">
            <div class="absolute -left-2.25 top-0 w-4 h-4 rounded-full bg-blue-600 dark:bg-blue-400 ring-4 ring-white dark:ring-slate-950" />

            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2">
              <h3 class="text-xl font-bold text-slate-900 dark:text-white">
                {job.role}
              </h3>
              <span class="text-sm font-medium text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/30 px-3 py-1 rounded-full w-fit mt-2 sm:mt-0">
                {job.date}
              </span>
            </div>

            <div class="text-lg font-semibold text-slate-700 dark:text-slate-300 mb-2">
              {job.company}
            </div>

            <p class="text-slate-600 dark:text-slate-400 leading-relaxed text-balance">
              {job.description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
